@model LevelAddEditVM
@{
    var actionText = Model.Id == 0 ? "Add" : "Edit";
}
<div class="modal-content">
    <div class="modal-header">
        <h1>@actionText Level</h1>
    </div>


    <div class="modal-body">

        <form method="post" asp-area="Admin" asp-action="AddEdit" asp-controller="Level">
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                @if (ViewBag.PackageSelectDisabled != null)
                {
                    <span>@ViewBag.SelectedPackageName</span>    
                    <input type="hidden" asp-for="PackageId"/>
                }
                else
                {
                    <select asp-for="PackageId" class="form-select">
                        <option>Please select Package</option>
                        @foreach (var item in ViewBag.Packages)
                        {
                            <option value="@item.Id">@item.Title</option>
                        }
                    </select>
                }
            </div>
            <div class="form-group mb-3">

                <input asp-for="Title" class="form-control" placeholder="Title" />
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">@actionText</button>
            </div>
        </form>
    </div>
    <div class="modal-footer">
    </div>

</div>