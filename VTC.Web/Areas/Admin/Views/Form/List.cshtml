@model List<ParentListVM>


    <h1>Agreement List</h1>

 <partial name="_AgreementList" model="(ParentListVM)ViewBag.searchKeyword" />
 <table class="table table-striped">
      <tr>
      <th>
          Parent Name
    </th>
    <th>
        Parent Surname
    </th>
     <th>
         Parent ID/Passport 
    </th>
     <th>
         Child Name
    </th>
     <th>
         Child Surname
    </th>
    </tr>
    @foreach(var item in Model)
    { 
     
        <tr>
            <td>
                @item.ParentFirstName
            </td>
            <td>
                @item.ParentSecondName
            </td>
            <td>
                @item.ParentIdNumber
            </td>
            <td>
                @item.ChildFirstName
            </td>
             <td>
                @item.ChildSecondName
            </td>
        </tr>
    }
</table>
<div class="pages">
    @if(ViewBag.CurrentPage > 1)
    {
         <a asp-action="Index" asp-route-pageIndex="@ViewBag.CurrentPage-1" class="btn btn-primary">
        previus
    </a>
    }
   
@for(int pageIndex = 1; pageIndex <= ViewBag.PageCount;pageIndex++)
    {
        if(pageIndex == ViewBag.CurrentPage)
        {
            <span class="btn btn-dark">
                @pageIndex
            </span>
        }
        else
        {
               <a asp-action="Index" asp-route-pageIndex="@pageIndex" class="btn btn-primary">
            @pageIndex
        </a>
        }
     
    }
    @if(ViewBag.CurrentPage < ViewBag.PageCount)
    {
        <a asp-action="Index" asp-route-pageIndex="@ViewBag.CurrentPage+1" class="btn btn-primary">
        next
    </a>
    }
